<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Teacher</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            Teacher Information
        </div>
        <div class="card-body">
            <h5 class="card-title" id="teacherName"></h5>
            <p class="card-text" id="teacherClasses"></p>
        </div>
    </div>

    <div class="card mt-3">
        <div class="card-body">
            <button class="btn btn-primary mt-2" onclick="window.location.href='/profile/teacher/student/create'">Create Student
            </button>
            <button class="btn btn-primary mt-2" onclick="window.location.href='/profile/teacher/class/create'">Create Class
            </button>
            <button class="btn btn-primary mt-2" onclick="window.location.href='/profile/teacher/class/add/schedule'">Create Schedule
            </button>
            <button class="btn btn-primary mt-2" onclick="window.location.href='/profile/teacher/class/add/students'" id="addTo">Add Student to Class
            </button>
            <form action="/api/auth/logout" method="post">
                <button class="btn btn-danger mt-2">Logout</button>
            </form>
        </div>
    </div>


    <div class="mt-3">
        <select class="form-select mb-2" id="classSelect">
        </select>

        <select class="form-select mb-2" id="yearSelect">
        </select>

        <select class="form-select mb-2" id="monthSelect">
        </select>
    </div>

    <div class="mt-3">
        <div id="calendar" class="calendar"></div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script>
    function fetchTeacherDataAndRenderCalendar() {
        const url = window.location.href
        const {teacherId} = extractIdsFromUrl(url)
        axios.get(`http://localhost:3000/api/teacher/${teacherId}`)
            .then(function (response) {
                const teacher = response.data.teacher[0]
                document.getElementById('teacherName').innerText = `${teacher.surname} ${teacher.name} ${teacher.lastname}`
                const teacherClasses = teacher.classes.map(cls => cls.name).join(', ')
                document.getElementById('teacherClasses').innerText = `Teaching Classes: ${teacherClasses}`

                const classSelect = document.getElementById('classSelect')
                teacher.classes.forEach(cls => {
                    const option = document.createElement('option')
                    option.value = cls._id
                    option.innerText = cls.name
                    classSelect.appendChild(option)
                })
                const defaultClassId = teacher.classes[0]._id
                const defaultClass = teacher.classes.find(cls => cls._id === defaultClassId)
                renderCalendar(defaultClass.schedule.calendar)
                console.log(defaultClass.schedule.year)
                const yearSelect = document.getElementById('yearSelect')
                const years = [defaultClass.schedule.year]
                console.log(years)
                years.forEach(year => {
                    const option = document.createElement('option')
                    option.value = year
                    option.innerText = year
                    yearSelect.appendChild(option)
                })

                const monthSelect = document.getElementById('monthSelect')
                const months = [defaultClass.schedule.month]
                console.log(months)
                months.forEach(month => {
                    const option = document.createElement('option')
                    option.value = month
                    option.innerText = month
                    monthSelect.appendChild(option)
                })
            })
            .catch(function (error) {
                console.error('Error fetching teacher data:', error)
            })
    }

    document.getElementById('classSelect').addEventListener('change', function (event) {
        const selectedClassId = event.target.value
        fetchClassCalendar(selectedClassId)
    })

    function renderCalendar(calendarData) {
        const calendarElement = document.getElementById('calendar')
        calendarElement.innerHTML = ''

        const daysOfWeek = calendarData.daysOfWeek
        const days = calendarData.days

        const selectedLessonDays = calendarData.selectedLessonDays || []

        const table = document.createElement('table')
        table.classList.add('table')

        const thead = document.createElement('thead')
        const headerRow = document.createElement('tr')
        daysOfWeek.forEach(day => {
            const th = document.createElement('th')
            th.textContent = day
            headerRow.appendChild(th)
        })
        thead.appendChild(headerRow)
        table.appendChild(thead)

        const tbody = document.createElement('tbody')
        days.forEach(week => {
            const weekRow = document.createElement('tr')
            week.forEach(day => {
                const td = document.createElement('td')
                td.textContent = day ? day : ''
                td.classList.add('calendar-day')
                if (selectedLessonDays.includes(daysOfWeek[new Date(day).getDay()])) {
                    td.classList.add('selected-lesson')
                }
                td.addEventListener('click', function() {
                    handleCalendarDayClick(day)
                })
                weekRow.appendChild(td)
            })
            tbody.appendChild(weekRow)
        })
        table.appendChild(tbody)

        calendarElement.appendChild(table)
    }

    function handleCalendarDayClick(day) {
        alert(`You clicked on ${day}`)
    }

    function extractIdsFromUrl(url) {
        const segments = url.split("/")
        const teacherId = segments[5]
        return { teacherId}
    }

    fetchTeacherDataAndRenderCalendar()
</script>
</body>
</html>
