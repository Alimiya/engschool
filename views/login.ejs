<!DOCTYPE html>
<html lang="kz">
<head>
    <meta charset="UTF-8">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"></script>
</head>
<body class="text-center">
<%- include('components/header') %>
<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                    <form action="/api/auth/login" method="post" class="card-body p-5 text-center">
                        <h3 class="mb-5" data-i18n="login"></h3>
                        <div class="form-floating mb-4">
                            <input type="text" id="username" pattern="[a-z]*" name="username" class="form-control" required/>
                            <label class="form-label" for="username" data-i18n="username"></label>
                        </div>

                        <div class="form-floating mb-4">
                            <input type="password" id="password" pattern="[a-zA-Z0-9]*" name="password" class="form-control" required/>
                            <label class="form-label" for="password" data-i18n="password"></label>
                        </div>
                        <button type="submit" class="w-100 btn btn-lg btn-primary mb-2" data-i18n="sign_in"></button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
</body>
<script src="i18n.js" type="module"></script>
</html>